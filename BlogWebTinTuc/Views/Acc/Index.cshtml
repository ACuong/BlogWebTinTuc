@model IEnumerable<BlogWebTinTuc.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tài Khoản</h2>

<p>
    @Html.ActionLink("Tạo tài khoản", "Create")
</p>


@using (Html.BeginForm("Index", "Acc", FormMethod.Get))
{
    <p>
        UserName: @Html.TextBox("SearchString") --- Chức vụ: @Html.DropDownList("RoleID", "All") <input type="submit" value="Tìm kiếm" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Username }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Username }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Username })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Xóa bộ lọc", "Index")
</div>
